
<body id="restaurant-create">


  <div class="dashboard">
    <div class="create-restaurant-header">
      <h1><strong>Create your own Restaurant Profile</strong></h1>
      <p><em>We are as excited as you</em></p>
      <%= link_to "Back to Homepage", root_path %>
    </div>
  </div>



  <div class="create-res-container p-5 rounded mt-3 text-start">
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :category %>
      <%= f.input :opening_hour %>
      <%= f.input :closing_hour %>
      <%= f.input :photo, as: :file %>
      <%= f.submit %>
    <% end %>
  </div>
</body>
