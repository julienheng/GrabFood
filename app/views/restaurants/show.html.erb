<h1>BUYER SHOW PAGE </h1>
<%# restaurant banner details %>
<div class="banner">
  <div class="header">
    <p><%= link_to 'Home', root_path, class: "text-decoration-none"  %> > <%= @restaurant.name %></p>
    <div class="restaurant-details">
      <h2><strong><%= @restaurant.name %></strong></h2>
      <p>Location: <%= @restaurant.location %></p>
      <p>Category: <%= @restaurant.category %></p>
    </div>
    <% if user_signed_in? %>
      <%= link_to "View Confirmation", order_path(@order) %>
    <% end %>
  </div>
</div>

<%# item cards %>
<div class="row">
  <% @restaurant.items.each do |item| %>
      <div class="col-sm-3 d-flex">
        <div class="card border p-3 border-success">
          <div class="card-img-top"><%= image_tag "fish.jpg" %></div>
          <div class="card-body d-flex flex-column">
            <div class="card-title"><h4><%= item.name %></h4></div>
            <div class="card-text mb-auto"><p><%= item.description %></p></div>
            <div class="card-text mt-auto"><p>$<%= item.price %></p></div>
              <% if user_signed_in? %>
                <div class="mt-auto">
                  <%= simple_form_for [@order, @order_item] do |f| %>
                    <div class="field"><%= f.input :quantity, input_html: { min: 0 } %></div>
                    <%= f.input :restaurant_id, :as => :hidden, :input_html => { :value => @restaurant.id } %>
                    <%= f.input :item_id, :as => :hidden, :input_html => { :value => item.id } %>
                    <a><%= f.submit "Add item", class: "btn btn-primary align-items-center" %></a>
                  <% end %>
                </div>
              <% end %>
            </div>
        </div>
      </div>
  <% end %>
</div>

<% if flash.alert %>
  <div class="alert alert-primary" role="alert">
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
  </div>
<% end %>
