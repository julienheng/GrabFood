<%= simple_form_for [order, order_item],
                  data: {
                    insert_in_count_target: "form",
                    action: "submit->insert-in-count#send"
                  } do |f| %>
  <%= f.input :quantity, input_html: { min: 0 } %>
  <%= f.input :restaurant_id, as: :hidden, input_html: { value: restaurant.id } %>
  <%= f.input :item_id, as: :hidden, input_html: { value: item.id } %>
  <%= f.submit class: "btn btn-primary align-items-center" %>
<% end %>
