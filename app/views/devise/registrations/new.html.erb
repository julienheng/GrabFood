<div class="container my-0">
  <div class="text-center">
    <h2>Welcome to GrabFood</h2>
    <h3>Sign up here </h3>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :is_seller, label: 'Are you a business owner?' %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :phone %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { password: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="form-actions2">
      <%= f.button :submit, "Sign up", class: 'signup' %>
    </div>
    <div class="link">
      <%= link_to "Already have an account? Log in", new_user_session_path %>
    </div>
  <% end %>
</div>


