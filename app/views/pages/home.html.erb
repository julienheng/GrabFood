    <%= form_with url: root_path, method: :get, class: "d-flex search-bar" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find Your Favourite Restaurant, Cuisine and Dish"
      %>
      <%= submit_tag "Search", class: "btn btn-success search-button" %>
      <% end %>
    <br>

  <div class="cards2">

      <h1><%#Available Restaurants in <%= @user.address %></h1>
    <div class="flex-wrap all-restaurant d-flex gap-2 justify-content-center front-body">
        <% @restaurants.each do |restaurant|%>
        <div class="border p-3 border-success" >
          <div><%= image_tag "fish.jpg" %></div>
          <p><%= link_to restaurant.name, restaurant_path(restaurant) %></p>
          <p><%= restaurant.category %></p>
          <p><%= restaurant.location %></p>
          <p><%= restaurant.opening_hour %></p>
          <p><%= restaurant.closing_hour %></p>
        </div>
        <% end %>
    </div>
